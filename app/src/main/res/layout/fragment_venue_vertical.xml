<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rootView">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#555"
            android:text="اسم رستوران"
            android:id="@+id/txtCollectionName"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/fragment_venue_vertical.collection_name"
            android:layout_centerHorizontal="true"/>

    <View
            android:layout_width="80dp"
            android:layout_height="5dp"
            android:layout_marginRight="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txtCollectionName"
            android:id="@+id/hrTxtCollectionName"
            android:background="@color/colorAccent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="9dp"/>


    <android.support.v7.widget.RecyclerView
            android:layout_below="@id/hrTxtCollectionName"
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>