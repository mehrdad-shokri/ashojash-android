<?xml version="1.0" encoding="utf-8"?>
<com.heinrichreimersoftware.materialintro.view.parallax.ParallaxRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/location"
            android:layout_centerInParent="true"
            android:id="@+id/imageView"
            app:layout_parallaxFactor=".5"
            android:scaleType="fitXY"
            android:layout_height="300dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:textColor="#666"
            android:text="ما جاشو میدونیم"
            android:id="@+id/title"
            android:layout_below="@id/imageView"
            android:textSize="28sp"
            android:textColor="#fff"
            app:layout_parallaxFactor=".5"
            android:layout_centerHorizontal="true"
    />

    <TextView
            android:layout_width="wrap_content"
            android:text="دیگه لازم نیست آدرس حفظ کنی\n با نقشه همه رستوران ها رو یک جا داری"
            tools:textColor="#666"
            android:id="@+id/description"
            android:layout_below="@id/title"
            app:layout_parallaxFactor=".5"
            android:textSize="17sp"
            android:textColor="#fff"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_height="wrap_content"/>
</com.heinrichreimersoftware.materialintro.view.parallax.ParallaxRelativeLayout>