<?xml version="1.0" encoding="utf-8"?>
<selector
        xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke
                    android:width="2dp"
                    android:color="@color/green_pressed"/>
            <corners
                    android:radius="1dp"/>
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp"/>
            <padding android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <stroke
                    android:width="1dp"
                    android:color="@color/green_focused"/>
            <corners android:radius="3dp"/>
            <padding android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                    android:width="1dp"
                    android:color="@color/green_normal"/>
            <corners android:radius="3dp"/>
            <!--<padding android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="20dp"/>-->
        </shape>
    </item>
</selector>
