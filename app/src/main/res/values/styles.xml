<resources>

    <style name="AshojashTheme" parent="AshojashMaterialTheme.Base">

        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="AshojashMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@color/white</item>
        <!--<item name="vpiCirclePageIndicatorStyle">@style/CirclePageIndicator</item>-->
    </style>

