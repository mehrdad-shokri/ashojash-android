<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height ="250dp"
        android:layout_width="match_parent"
        app:cardElevation="2dp"
        app:cardCornerRadius="0dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:background="#fff"
                    android:id="@+id/rootView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imgVenue"
                android:src="@drawable/btn_more"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#fff"
                android:id="@+id/txtVenueName"
                android:layout_margin="15dp"
                android:textDirection="rtl"
                android:textSize="@dimen/fragment_venue_hero_big.venue_name"
                android:layout_alignRight="@+id/imgVenue"
                android:layout_alignEnd="@id/imgVenue"
                android:layout_alignTop="@+id/imgVenue"/>

        <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white"
                android:background="@drawable/level_0"
                android:gravity="center"
                android:id="@+id/txtVenueScore"
                android:layout_margin="15dp"
                android:textSize="13dp"
                android:text="-"
                android:layout_alignLeft="@+id/imgVenue"
                android:layout_alignTop="@+id/imgVenue"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>