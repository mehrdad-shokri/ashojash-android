<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbarTopContainer"
                android:orientation="vertical">
            <include android:id="@+id/toolbarTop"
                     layout="@layout/toolbar_top"/>
        </LinearLayout>
        <FrameLayout android:id="@+id/fragmentSearchContainer"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_below="@id/toolbarTopContainer">
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <include
                android:id="@+id/toolbarTop"
                layout="@layout/toolbar_search_background"/>

        <com.mypopsy.widget.FloatingSearchView
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:fsv_cornerRadius="0dp"
                android:paddingRight="2dp"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                app:contentInsetEnd="5dp"
                app:contentInsetStart="5dp"
                android:background="#90000000"
                android:hint="@string/search_hint"
                app:layout_behavior="com.ashojash.android.ui.ScrollingSearchViewBehavior"
                app:fsv_menu="@menu/search"
                app:theme="@style/CustomFloatingSearchViewTheme"/>
    </RelativeLayout>
</FrameLayout>