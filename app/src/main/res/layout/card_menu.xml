<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="60dp" android:paddingLeft="10dp" android:paddingRight="10dp">
    <android.support.v7.widget.CardView
            android:id="@+id/cardBasicMenu"
            android:layout_centerVertical="true"
            card_view:cardElevation="0dp"
            android:layout_centerInParent="true"
            card_view:cardCornerRadius="0dp"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/default_white">

            <TextView
                    android:text="Item name"
                    android:id="@+id/txtMenuItemNameMenuBasicCard"
                    android:textColor="#455A64"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="14dp"
                    android:gravity="center_vertical|right"
                    android:layout_toRightOf="@+id/txtMenuPriceMenuBasicCard"/>
            <TextView
                    android:text="Price"
                    android:id="@+id/txtMenuPriceMenuBasicCard"
                    android:textColor="@color/colorDollarSign"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:gravity="center_vertical|left"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>
    <ImageView android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_alignParentBottom="true"
               android:background="#88dddddd"/>
</RelativeLayout>