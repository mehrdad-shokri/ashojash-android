<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:id="@+id/rootView"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/activity_main_background_color"
        android:layout_marginBottom="8dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imgCollection"
                android:layout_alignParentTop="true"
                android:src="@drawable/btn_more"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtCollectionName"
                android:textColor="#fff"
                android:text=""
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/card_collection.collection_name"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:visibility="visible"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical|right"
                android:id="@+id/linearLayout"
                android:visibility="visible"
                android:layout_alignParentBottom="true"
                android:layout_alignBottom="@+id/imgCollection">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text=""
                    android:textSize="@dimen/card_collection_slideshow.collection_description"
                    android:textColor="@color/text_primary"
                    android:id="@+id/txtCollectionDescription"/>

            <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    app:iiv_color="@color/green"
                    android:paddingTop="1dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginLeft="3dp"
                    app:iiv_icon="gmd_chevron_left"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>