<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="180dp"
                                    android:id="@+id/rootView"
                                    android:layout_marginBottom="10dp"
                                    app:cardCornerRadius="5dp"
                                    app:cardElevation="4dp"
                                    app:cardUseCompatPadding="true"
                                    app:cardBackgroundColor="#eaeaea">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imgVenue"
                android:src="@drawable/btn_more"
                android:layout_alignParentTop="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#fff"
                android:id="@+id/txtVenueName"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:textDirection="rtl"
                android:textSize="@dimen/fragment_venue_collection_card.venue_name"/>

        <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white"
                android:background="@drawable/level_0"
                android:gravity="center"
                android:id="@+id/txtVenueScore"
                android:layout_margin="10dp"
                android:textSize="13dp"
                android:text="-"
                android:layout_alignLeft="@+id/imgVenue"
                android:layout_alignTop="@+id/imgVenue"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtVenueAddress"
                android:textDirection="rtl"
                android:textSize="@dimen/fragment_venue_collection_card.venue_address"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:textColor="#fff"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:text=""
                android:layout_alignBottom="@+id/imgVenue"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>