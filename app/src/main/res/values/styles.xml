<resources>

  <style name="AshojashTheme" parent="AshojashMaterialTheme.Base">
  </style>
  <!--Theme.AppCompat.Light.DarkActionBar-->
  <style name="AshojashMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:homeAsUpIndicator">@color/white</item>
  </style>

  <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorAccent">@color/colorPrimary</item>
    <item name="android:textColorPrimary">#333</item>
    <item name="android:background">#efefef</item>
  </style>

  <style name="dollarRating" parent="@android:style/Widget.RatingBar">
    <item name="android:progressDrawable">@drawable/ratingbar_dollar</item>
    <item name="android:minHeight">24dip</item>
    <item name="android:maxHeight">25dip</item>
  </style>

  <style name="starRating" parent="@android:style/Widget.RatingBar">
    <item name="android:progressDrawable">@drawable/ratingbar_star</item>
    <item name="android:minHeight">24dip</item>
    <item name="android:maxHeight">25dip</item>
  </style>

  <style name="AshojashFloatingSearchViewTheme" parent="AshojashTheme">
    <item name="editTextStyle">@style/searchViewEditTextStyle</item>
    <item name="android:divider">#c9c9c9</item>
    <item name="android:dividerHeight">1dp</item>
    <item name="colorControlNormal">#666</item>
  </style>

  <style name="searchViewEditTextStyle" parent="Widget.AppCompat.EditText">
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">#666</item>
    <item name="android:imeOptions">actionSearch</item>
  </style>

  <style name="BB_BottomBarItem_Fixed">
    <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    <item name="android:gravity">center_vertical|center_horizontal</item>
    <item name="android:layout_height">@dimen/bottom_navabar_height</item>
    <item name="android:paddingTop">10dp</item>
    <item name="android:paddingBottom">10dp</item>
  </style>

  <style name="SplashThemeBase" parent="Theme.AppCompat.NoActionBar">
    <item name="android:windowBackground">@drawable/background_splash</item>
  </style>

  <style name="SplashTheme" parent="SplashThemeBase">
  </style>
</resources>