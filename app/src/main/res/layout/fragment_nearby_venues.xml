<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent" android:layout_height="fill_parent"
                tools:context="com.ashojash.activity.FragmentHero">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:divider="@color/text_secondary"
            android:layout_height="48dp" android:layout_alignParentTop="true"
            android:background="@color/md_white_1000"
            android:padding="8dp"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:gravity="center_vertical|right" android:id="@+id/linearLayout">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/nearest"
                android:textColor="@color/text_primary"
                />
        <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:iiv_color="@color/text_primary"
                android:padding="4dp"
                app:iiv_icon="gmd_near_me"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewNearbyFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:clipToPadding="false"
            android:adjustViewBounds="true"
            android:layout_below="@+id/linearLayout">
    </android.support.v7.widget.RecyclerView>
    <ImageView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:src="@android:drawable/divider_horizontal_dark"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:paddingBottom="1dp"
            android:background="#d0d0d0"
            android:layout_below="@+id/linearLayout"/>
    <ProgressBar
            android:id="@+id/prgNearbyFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:id="@+id/errorViewVenue"
            android:layout_centerHorizontal="true"
            android:layout_height="fill_parent" android:visibility="gone">
        <com.mikepenz.iconics.view.IconicsImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:iiv_color="@color/text_secondary"
                android:padding="4dp"
                android:scaleType="centerInside"
                app:iiv_icon="gmd_loop"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_primary"
                android:id="@+id/txtErrorNearbyFragment"/>
    </LinearLayout>

</RelativeLayout>