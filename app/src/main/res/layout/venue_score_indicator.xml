<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:layout_height="match_parent">
    <com.ashojash.android.customview.VenueScoreArc android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:layout_alignParentBottom="true"
                                                   android:id="@+id/venueScoreArcVenueScoreIndicatorView"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="match_parent" android:visibility="visible">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight=".64"/>
        <Button android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/txtVenueScoreVenueScoreIndicatorView"
                android:text="- -"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#333"
                android:background="@drawable/level_0"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/txtVenueScoreCountVenueScoreIndicatorView"
                  android:text="@string/review_count_not_enough"
                  android:layout_marginTop="5dp"
                  android:layout_gravity="center_horizontal"
                  android:textColor="#ddd"/>
    </LinearLayout>
</RelativeLayout>